@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Links
@model RenderingModel
@{
    Sitecore.Data.Fields.MultilistField social_Media_List = Model.Item.Fields["Social Media List"];
    //Sitecore.Data.Fields.LinkField Privacy_Policy_Link = Model.Item.Fields["Privacy Policy Link"];

}

<section class="footer-icons">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <ul class="hidden-sm-down pull-left">
                    <li>
                        @{ 
                            var logo_link = Sitecore.Context.Database.GetItem("{88A087A7-E262-4AB6-B8F5-99920F1CE1AC}");
                            var Footer_Logo_Link = LinkManager.GetItemUrl(logo_link);
                        }
                        <a href="@Footer_Logo_Link">
                            @Html.Sitecore().Field("Company Logo")
                        </a>
                    </li>
                    <!-- BEGIN FOOTER NAVIGATION -->

                    <li>
                        @{ 
                            Sitecore.Data.Fields.LinkField privacy_policy = Model.Item.Fields["Link"];
                            //var privacy_policy_link = Sitecore.Context.Database.GetItem("{11F3757C-2509-4D50-815A-FD89E8D2C6F4}");
                            //var privacy_link = LinkManager.GetItemUrl(privacy_policy_link);
                        }
                        <a href='@privacy_policy.Url'>@Html.Sitecore().Field("Link Heading")</a>
                    </li>

                    <!-- END FOOTER NAVIGATION -->
                    <li>
                        @Html.Sitecore().Field("Copyright")
                    </li>
                </ul>
                <!-- Begin Footer Icons-->
      
                <ul class="list-unstyled">@{

                    foreach (Sitecore.Data.Items.Item social_Media in social_Media_List.GetItems())
                    {
                        Sitecore.Data.Fields.LinkField link = social_Media.Fields["Social Media Link"];
                        
                        <li>

                            <a class="a2a_button_twitter" href="@link.Url"> @Html.Sitecore().Field("Social Media Logo", social_Media, new { mw = 20, mh = 20 }))</a>
                        </li>
                    }
                }</ul>
                <!-- End Footer Icons-->
            </div>
        </div>
    </div>
</section>
