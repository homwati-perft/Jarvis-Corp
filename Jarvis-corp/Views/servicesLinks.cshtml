@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel
@{
    Sitecore.Data.Fields.LinkField services_link = Model.Item.Fields["Link"];

}

<a href="@services_link.Url">
    <div class="tile-block tile-img">
        @Html.Sitecore().Field("Service Image", new { @class= "img-responsive" })
    </div>
    <div class="tile-block tile-content ">
        <figcaption>Technology</figcaption>
        <div class="tile-content-wrap">
            <h2 class="tile-title">@Html.Sitecore().Field("Service Heading")</h2>
        </div>
    </div>
</a>