@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel
@{
    Sitecore.Data.Fields.LinkField regi_link = Model.Item.Fields["Link"];
    Sitecore.Data.Fields.MultilistField author_list = Model.Item.Fields["Author List"];
}

<div class="col-md-4 panel-wrapper">
    <div class="card" style="height: 478px;">
        <div class="event" style="height: 204px;">
            <h4 class="event-title">
                <a href="">@Html.Sitecore().Field("Heading")</a>
            </h4>
            <h5></h5>
            <h6>
                @Html.Sitecore().Field("Date", new { format = "MMMM dd, yyyy" })
                <br>
                @Html.Sitecore().Field("Start Time", new { format = "hh:mm" })- @Html.Sitecore().Field("End Time", new { format = "hh:mm" }) CST
            </h6>
            <a href="@regi_link.Url" class="btn-event">@Html.Sitecore().Field("Link Heading")</a>
        </div>
        <div class="card-footer" style="height:363px;">
            <div class="event-column event-host">
                @foreach (Sitecore.Data.Items.Item authors in author_list.GetItems())
                {
                    <div class="profile-label">
                        <div class="profile-row">
                            <div class="content-container img-wrapper">
                                @Html.Sitecore().Field("Photo", authors, new { @class = "img-profile" })
                            </div>
                            <div class="content-container content-wrapper">
                                <h5>@Html.Sitecore().Field("Name", authors)</h5>
                                <h6>@Html.Sitecore().Field("Designation", authors)</h6>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>

    </div>
</div>
