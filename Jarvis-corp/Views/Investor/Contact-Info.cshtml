                                                    <br/><span class="ccbnLabel">Phone: </span><span class="ccbnTxt">@Html.Sitecore().Field("Phone Number", contact)</span><br />
                                                    @if (contact.Fields["Fax"] == null)
                                                    {
                                                       
                                                    }
                                                    else
                                                    {
                                                        <span class="ccbnLabel">Fax: </span><span class="ccbnTxt">@Html.Sitecore().Field("Fax", contact)</span>
                                                    }

                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                }
                            </div>
                        </div>

                    </div>

                </div>
                <div class="block--attribution-block__stock-info-attribution__thomson-reuters block--attribution-block__stock-info-attribution__thomson-reuters--5806 block--footer--attribution-block__stock-info-attribution__thomson-reuters block--footer--attribution-block__stock-info-attribution__thomson-reuters--5806 block--2f58128a-1a49-4441-8f00-f948675b17d4 block--2f58128a-1a49-4441-8f00-f948675b17d4--5806 block block-nir-attribution-block block-attribution-block__stock-info-attribution__thomson-reuters">


                    <p>
                        @Html.Sitecore().Field("Contact Copyright")
                    </p>

                </div>
            </div>
        </div>
    </div>
</div>