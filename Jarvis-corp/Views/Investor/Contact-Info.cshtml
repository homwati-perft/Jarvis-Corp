                            <div class="ccbnResponsiveRow">

                                @foreach (Sitecore.Data.Items.Item contact in contact_child)
                                {
                                    <div class="ccbnResponsiveCell ccbnResponsive25">
                                        <table border="0" cellpadding="3" cellspacing="1" width="100%">
